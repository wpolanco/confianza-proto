extends ../default

block content
  include ../template/nav
  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide','column'])
      h2(class=['ui','header','blue','dividing'])= 'Crear Ruta'
      
      div(class='form-nuevaruta')
        form(class=['ui', 'form'] action='http://localhost:3000/crearruta' method='post')
          div(class=['ui', 'field'])
            label(for='descripcion')= 'Descripcion de la ruta'
            input(type='text' name='descripcion' placeholder='Descripcion')
              
          button(class=['ui','button','basic','black'])= 'Crear Ruta'
          div(class=['ui','message','error'])
      
      if info != undefined 
        div(class=['ui', 'message','success'])
          i(class=['close', 'icon'])
          div(class='header')= 'Ruta registrada'
          p= info
    script(src='/javascripts/validacion.js')
